<script>
{% if fb_content_ids is defined %}
fbq('track', '{{fb_pixel_event}}', {
  content_ids: {{fb_content_ids|json_encode|raw}},
  content_type: 'product',
  value: {{fb_value|default('0,00')}},
  currency: 'JPY'
});
{% else %}
fbq('track', '{{fb_pixel_event}}');
{% endif %}
</script>
